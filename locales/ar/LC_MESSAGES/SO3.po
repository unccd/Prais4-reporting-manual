msgid "SPI values"
msgstr "قيم المؤشر المعياري للهطول"

#: ../../SO3.md:136
msgid "Drought intensity class"
msgstr "فئة شدة الجفاف"

#: ../../SO3.md:137
msgid "0 to -0.99"
msgstr "0 إلى -0.99"

#: ../../SO3.md:138
msgid "Mild drought"
msgstr "جفاف خفيف"

#: ../../SO3.md:139
msgid "-1.0 to -1.49"
msgstr "-1.0 إلى -1.49"

#: ../../SO3.md:140
msgid "Moderate drought"
msgstr "جفاف معتدل"

#: ../../SO3.md:141
msgid "-1.5 to -1.99"
msgstr "-1.5 إلى -1.99"

